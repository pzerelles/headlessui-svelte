{
  "name": "@pzerelles/headlessui-svelte",
  "version": "2.1.2-next.64",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "package:watch": "svelte-package --watch",
    "prepublishOnly": "bun run package",
    "test": "bun run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "release": "bun run package && changeset publish"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.16.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@changesets/types": "^6.1.0",
    "@playwright/test": "^1.56.1",
    "@pzerelles/heroicons-svelte": "^2.2.2",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.19.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^16.5.0",
    "jsdom": "^25.0.1",
    "outdent": "^0.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "publint": "^0.3.15",
    "svelte": "^5.43.12",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@floating-ui/core": "^1.7.3",
    "@floating-ui/dom": "^1.7.4",
    "@floating-ui/utils": "^0.2.10",
    "esm-env": "^1.2.2",
    "nanoid": "^5.1.6"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
